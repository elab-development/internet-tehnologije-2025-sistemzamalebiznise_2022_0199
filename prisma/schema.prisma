generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Korisnik {
  idKorisnik   Int            @id @default(autoincrement())
  ime          String
  prezime      String
  email        String         @unique
  lozinkaHash  String
  uloga        String         // VLASNIK, RADNIK, DOSTAVLJAC
  aktivan      Boolean        @default(true)
}

model Proizvod {
  idProizvod       Int      @id @default(autoincrement())
  naziv            String
  sifra            String   @unique
  cena             Float
  kolicinaNaLageru Int
  jedinicaMere     String
  aktivan          Boolean  @default(true)
}